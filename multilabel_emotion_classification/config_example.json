{
  "experiment_name": "emotion_classification_example",
  "description": "Example configuration for multilabel emotion classification",
  "version": "1.0.0",
  "data": {
    "data_path": "./data",
    "goemotions_files": [
      "goemotions_1.csv",
      "goemotions_2.csv",
      "goemotions_3.csv"
    ],
    "train_split": 0.8,
    "val_split": 0.1,
    "test_split": 0.1,
    "random_seed": 42,
    "min_length": 10,
    "max_length": 512,
    "remove_duplicates": true,
    "balance_classes": false
  },
  "model": {
    "model_name": "bert-base-uncased",
    "num_labels": 28,
    "max_length": 512,
    "dropout_rate": 0.1,
    "hidden_size": null,
    "learning_rate": 2e-5,
    "warmup_steps": 500,
    "weight_decay": 0.01
  },
  "training": {
    "learning_rate": 2e-5,
    "batch_size": 16,
    "num_epochs": 3,
    "max_length": 512,
    "warmup_steps": 500,
    "weight_decay": 0.01,
    "gradient_accumulation_steps": 1,
    "max_grad_norm": 1.0,
    "adam_epsilon": 1e-8,
    "adam_beta1": 0.9,
    "adam_beta2": 0.999,
    "lr_scheduler_type": "linear",
    "warmup_ratio": 0.1,
    "early_stopping": true,
    "early_stopping_patience": 3,
    "early_stopping_threshold": 0.001,
    "eval_steps": 500,
    "eval_strategy": "steps",
    "save_steps": 1000,
    "save_strategy": "steps",
    "save_total_limit": 3,
    "logging_steps": 100,
    "log_level": "info",
    "output_dir": "./results",
    "run_name": null,
    "seed": 42,
    "fp16": false,
    "dataloader_num_workers": 4
  },
  "evaluation": {
    "metrics": [
      "f1_macro",
      "f1_micro",
      "precision_macro",
      "recall_macro",
      "accuracy"
    ],
    "threshold_tuning_enabled": true,
    "threshold_tuning_metric": "f1_macro",
    "threshold_per_class": false,
    "n_thresholds": 100,
    "threshold_range": [0.1, 0.9],
    "save_predictions": true,
    "save_probabilities": true,
    "create_plots": true
  },
  "augmentation": {
    "eda_enabled": false,
    "eda_alpha_sr": 0.1,
    "eda_alpha_ri": 0.1,
    "eda_alpha_rs": 0.1,
    "eda_alpha_rd": 0.1,
    "eda_num_aug": 4,
    "llm_enabled": false,
    "llm_model": "gpt-3.5-turbo",
    "llm_temperature": 0.7,
    "llm_max_tokens": 150,
    "llm_num_variations": 3,
    "synthetic_enabled": false,
    "synthetic_samples_per_class": 100,
    "downsample_enabled": false,
    "downsample_strategy": "random",
    "downsample_ratio": 0.5
  },
  "preprocessing": {
    "lowercase": true,
    "remove_urls": true,
    "remove_mentions": true,
    "remove_hashtags": false,
    "remove_extra_whitespace": true,
    "remove_non_ascii": false,
    "min_length": 10,
    "max_length": 512
  }
}
